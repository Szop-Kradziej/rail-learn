<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.drabarz.karola.raillearn">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <meta-data android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id"/>
        <activity
            android:name=".login.LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".trip.list.TripsActivity"></activity>
        <activity android:name=".trip.details.NewFullTripActivity"></activity>
        <activity android:name=".trip.details.SelectedOtherFullTripActivity"></activity>
        <activity android:name=".trip.details.SelectedMyFullTripActivity"></activity>
        <activity android:name=".trip.details.UpdatedFullTripActivity"></activity>
        <activity android:name=".trip.create.NewTripRouteActivity"></activity>
        <activity android:name=".trip.create.NewTripOfferActivity"></activity>
        <activity android:name=".trip.create.EditTripRouteActivity"></activity>
        <activity android:name=".trip.create.EditTripOfferActivity"></activity>
        <activity android:name="com.facebook.FacebookActivity"
            android:configChanges=
                "keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:label="@string/app_name" />
    </application>

</manifest>
