<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.drabarz.karola.raillearn">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name=".login.SmsActiity"
            android:label="send sms activity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".login.LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".trip.list.TripsActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>
        <activity android:name=".trip.details.NewFullTripActivity"/>
        <activity android:name=".trip.details.SelectedOtherFullTripActivity"/>
        <activity android:name=".trip.details.SelectedMyFullTripActivity"/>
        <activity android:name=".trip.details.SelectedMyRequestedFullTripActivity"/>
        <activity android:name=".trip.details.UpdatedFullTripActivity"/>
        <activity android:name=".trip.create.NewTripRouteActivity"/>
        <activity android:name=".trip.create.NewTripOfferActivity"/>
        <activity android:name=".trip.create.EditTripRouteActivity"/>
        <activity android:name=".trip.create.EditTripOfferActivity"/>
        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
    </application>

</manifest>
